<body class="fixed-left">
    <!-- Begin page -->
    <div id="wrapper">

        @Html.Partial("Header")

        @Html.Partial("_LeftSidePartial")

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">

            @RenderBody()

            <footer class="footer text-right">
                2016 © Adminto.
            </footer>
        </div>
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->

        @Html.Partial("_RightSidePartial")

    </div>
    @Html.Partial("_ModalPartial")
    <script>
        var resizefunc = [];
    </script>
    <!-- jQuery  -->
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="/assets/plugins/jquery-quicksearch/jquery.quicksearch.js"></script>
    <script src="/assets/plugins/select2/dist/js/select2.min.js" type="text/javascript"></script>
    <script src="/assets/js/detect.js"></script>
    <script src="/assets/js/fastclick.js"></script>
    <script src="/assets/js/jquery.blockUI.js"></script>
    <script src="/assets/js/waves.js"></script>
    <script src="/assets/js/jquery.nicescroll.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/jquery.scrollTo.min.js"></script>
    <script src="/assets/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/assets/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
    <!-- Toastr js -->
    <script src="/assets/plugins/toastr/toastr.min.js"></script>
    <script src="/Content/js/prettify.min.js"></script>
    <script src="/Scripts/Common/Global.js"></script>

    <script type="text/javascript">
        var userIdLogin = "@HttpContext.Current.Session["UserId"]";
        var groupUserId = "@HttpContext.Current.Session["GroupId"]";
        //if (userIdLogin < 1) {
        //    window.location = "/Login/Login";
        //}
        setKeyup("input[class*='moneyformat']");
        function reload3s() {
            window.setTimeout(function () { location.reload() }, 3000)
        }
        function applyDatepicker(elem) {
            $(elem).datepicker({
                autoclose: true,
                todayHighlight: true,
                format: 'dd/mm/yyyy'
            });
        }
        function checkNum(n) {
            var numbers = /^[0-9]+$/;
            if (n.length > 0 && n.match(numbers)){
                return true;
            }
        }
        function getpermission(per) {
            for (var i = 0; i < permissions.length; i++) {
                if (permissions[i] === per) {
                    return true;
                }
            }
            return false;
        }

        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $('#add-customer-modal-content').validate({
            rules: {
                DisplayName: {
                    required: true,
                    minlength: 6
                },
                Email: {
                    email: true
                }
            }
        });
        function resetForm(el) {
            $('' + el + ' input:not([type="button"])').val('');
            $('' + el + ' input[type="tel"]').val(0);
            $('' + el + ' textarea').val('');
            $('' + el + ' select').prop('selectedIndex', 0)
        }
        $(document).ready(function () {
            $(".select2").select2();

            applyDatepicker(".datepicker");

            $('.table-responsive').on('show.bs.dropdown', function () {
                $('.table-responsive').css("overflow", "inherit");
                $('#wrapper').add('.content-page').css({ "overflow": "unset" });
            });

            $('.table-responsive').on('hide.bs.dropdown', function () {
                $('.table-responsive').css("overflow", "auto");
                $('#wrapper').add('.content-page').css({ "overflow": "hidden" });
            })

        });
    </script>
    <script src="/home/GetUserPermissionJs"></script>
    @RenderSection("scripts", required: false)
    <script src="/assets/js/jquery.core.js"></script>
    <script src="/assets/js/jquery.app.js"></script>
</body>
</html>
